<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="6dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">
<RelativeLayout
    android:layout_margin="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_read"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_margin="10dp" />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/tv_read"
        android:layout_alignTop="@id/tv_read"
        android:layout_height="115dp" />
    <ImageView
        android:id="@+id/xx2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/tv_read"
        android:layout_marginLeft="80dp"
        android:src="@drawable/love1"/>
    <TextView
        android:id="@+id/tv_love"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_read"
        android:layout_alignTop="@id/xx2"
        android:layout_toRightOf="@id/xx2"
        android:text="13"
        android:textSize="17sp"/>
    <ImageView
        android:id="@+id/xx"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/tv_read"
        android:layout_marginLeft="160dp"
        android:src="@drawable/say1"/>
    <TextView
        android:id="@+id/tv_say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_read"
        android:layout_alignTop="@id/xx"
        android:layout_toRightOf="@id/xx"
        android:text="113"
        android:textSize="17sp"/>
</RelativeLayout>
</android.support.v7.widget.CardView>