<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    android:elevation="6dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/index_vertical_list_image"
        android:layout_width="150dp"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/index_vertical_list_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/index_vertical_list_image"
        android:text="我是标题"
        android:textColor="#f00"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/index_vertical_list_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/index_vertical_list_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/index_vertical_list_image"
        android:textSize="15sp"
        android:text="我是描述" />

</RelativeLayout>
</android.support.v7.widget.CardView>