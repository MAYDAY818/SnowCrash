<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/R.id.rel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="#000"
            android:text="SnowCrash"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tv_cho"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/phone" />
        <EditText

            android:id="@+id/et_phone"
            android:layout_marginLeft="10dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:textSize="15sp"
            android:inputType="phone"/>
        <Button
            android:id="@+id/btn_getVerificationCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/verification"
            />
        <EditText
            android:id="@+id/et_code"
            android:layout_marginLeft="10dp"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:textSize="15sp"
            android:inputType="phone"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/name"
            />
        <EditText
            android:id="@+id/et_anotherName"
            android:layout_marginLeft="10dp"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:inputType="phone"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pwd"
            />
        <EditText
            android:id="@+id/et_pwd"
            android:layout_marginLeft="10dp"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:inputType="phone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_below="@id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"/>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="注 册 即 表 示 接 受 本 应 用 使 用 协 议"/>
    </LinearLayout>

</LinearLayout>